@model AVMTravel.Web.ViewModels.UsuarioViewModel

<h2>Registrar Cuenta</h2>

@using (Html.BeginForm("Register", "Usuarios", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <div>
        @Html.LabelFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre)
        @Html.ValidationMessageFor(m => m.Nombre)
    </div>
    <div>
        @Html.LabelFor(m => m.CorreoElectronico)
        @Html.TextBoxFor(m => m.CorreoElectronico)
        @Html.ValidationMessageFor(m => m.CorreoElectronico)
    </div>
    <div>
        @Html.LabelFor(m => m.Contrasena)
        @Html.PasswordFor(m => m.Contrasena)
        @Html.ValidationMessageFor(m => m.Contrasena)
    </div>
    <button type="submit">Registrarse</button>
}