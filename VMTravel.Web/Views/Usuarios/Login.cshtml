@model AVMTravel.Web.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Iniciar Sesión</h2>

@using (Html.BeginForm("Login", "Usuarios", FormMethod.Post, new { @class = "form-horizontal login-form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.CorreoElectronico, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CorreoElectronico, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Contrasena, new { @class = "control-label" })
        @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Contrasena, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
    </div>

    <p class="text-center">No tienes una cuenta? <a href="@Url.Action("Register", "Usuarios")">Regístrate aquí</a>.</p>
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    h2 {
        text-align: center;
        color: #009879;
        font-size: 36px;
        margin-bottom: 20px;
    }

    .login-form {
        max-width: 400px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: #009879;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 100%;
    }

    .btn-primary:hover {
        background-color: #007f65;
    }

    .text-danger {
        color: red;
        font-size: 14px;
    }

    p.text-center {
        text-align: center;
        font-size: 16px;
    }

    p.text-center a {
        color: #009879;
        text-decoration: none;
    }

    p.text-center a:hover {
        text-decoration: underline;
    }

</style>
